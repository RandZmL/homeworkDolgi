#include <iostream>
#include <iomanip> 
#include <math.h>
#include <stdlib.h>

int main() {

	using namespace std;
	const int n = 10;
	int arr[n]{ 44, 41, 3, -6, 42, 12, -1, -65, 2, 10 };
	int sum = 0;
	float sumF = 0;


		for (int i = 0; i < n; i++) {

				sum = sum + arr[i];

		}

		sumF = sum / n;

		cout << "Numbers, which is less than " << sumF << " are ";

		for (int i = 0; i < n; i++) {

			if (arr[i] < sumF)
				cout << arr[i] << " ";
		
		}



	std::getchar();
	std::getchar();

	return 0;
}
