#include <iostream>
#include <cstring>
#include <cctype>

using namespace std;


int main() {

	string s1;
	int l;

	cout << "Enter your text: ";
	cin >> s1;

	l = s1.length();
	cout << "Length is " << l << endl;

	if (l > 10) {

		cout << "Lenght is more, than 10" << endl;
		s1.erase(6);
		cout << "Your new text is: " << s1;

	}

	else {

		cout << "Lenght is less, than 10" << endl;
		for (int i = l; i < 12; i++) {

			s1 = s1 + "o";

		}

		cout << "Your new text is: " << s1;

	}


	return 0;
}
