#include <iostream>
#include <iomanip> 
#include <math.h>

int main() {

	using namespace std;

	float x, y;

	cout << "Enter x: ";
	cin >> x;


	if (x > 3) {
		y = 5 * x - 10;
		cout << y << endl;
	}
	if (x == 3) {
		y = 1;
		cout << y << endl;
	}
	if (x < 3) {
		y = 2 * fabs(x) - 5;
		cout << y << endl;
	}



	std::getchar();
	std::getchar();

	return 0;
}
