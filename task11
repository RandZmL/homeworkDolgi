	int arr[3];

	cout << "Enter first number: ";
	cin >> arr[0];

	cout << "Enter second number: ";
	cin >> arr[1];

	cout << "Enter third number: ";
	cin >> arr[2];

	min = arr[0];
	max = arr[0];

	for (int i = 0; i < 3; i++) {

		if (arr[i] <= min) {
			min = arr[i];
		}

		if (arr[i] >= max) {
			max = arr[i];
		}

	}

	cout << "The highest number is " << max << " and the lowest number is " << min << endl;
	

	getchar();
	getchar();
	return 0;

}
